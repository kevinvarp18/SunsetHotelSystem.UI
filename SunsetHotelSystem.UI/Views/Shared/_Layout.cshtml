<!DOCTYPE html>
<html>
<head>
    <title>Sunset Hotel System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Mug house Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <link rel="shortcut icon" type="image/x-icon" href="../images/icono.png" />
    <link href="//fonts.googleapis.com/css?family=Prompt:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=latin-ext,thai,vietnamese" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Merriweather" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/javascript")
    <script type="application/x-javascript">
         addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
        function hideURLbar(){ window.scrollTo(0,1); } </script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>

</head>
<body>

    <!--------------------------------------------- HEADER --------------------------------------------->

    <div class="banner">
        <div class="header-bottom">
            <div class="header">
                <div class="container">
                    <div class="w3_agile_logo">
                        @{
                            if (Session["Usuario"].Equals("0")) {
                                <a href="@Url.Action("Index", "Home")"><img src="../images/logo.png" width="50%" height="50%" class="rounded img-fluid" alt="Logo"></a>
                            } else {
                                <a href="@Url.Action("Home", "Administrador")"><img src="../images/logo.png" width="50%" height="50%" class="rounded img-fluid" alt="Logo"></a>
                            }
                        }
                        
                    </div>
                    <div class="header-nav">
                        <nav class="navbar navbar-default">
                            <div class="navbar-header navbar-left">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <div class="collapse navbar-collapse navbar-right" id="bs-example-navbar-collapse-1">
                                <nav class="link-effect-12">
                                    <ul class="nav navbar-nav w3_agile_nav">
                                        @{
                                            if (Session["Usuario"].Equals("0")) {
                                                <li><a href="@Url.Action("Index", "Home")" class="active"><span>Inicio</span></a></li>
                                                <li><a href="@Url.Action("SobreNosotros", "Cliente")"><span>Sobre Nosotros</span></a></li>
                                                <li><a href="@Url.Action("Facilidades", "Cliente")"><span>Facilidades</span></a></li>
                                                <li><a href="@Url.Action("ComoLlegar", "Cliente")"><span>¿C&oacute;mo llegar?</span></a></li>
                                                <li><a href="@Url.Action("Tarifas", "Cliente")"><span>Tarifas</span></a></li>
                                                <li><a href="@Url.Action("HabitacionDisponible", "Reserva")"><span>Reserva en L&iacute;nea</span></a></li>
                                                <li><a href="@Url.Action("Contactenos", "Cliente")"><span>Contactenos</span></a></li>
                                            } else {
                                                <li><a href="@Url.Action("Login", "Administrador")" class="active"><span>Inicio</span></a></li>
                                                <li><a href="@Url.Action("ModificarPaginas", "ModificarPaginas")"><span>Modificar p&aacute;ginas</span></a></li>
                                                <li><a href="@Url.Action("ObtenerReservas", "Reserva")"><span>Lista de reservaciones</span></a></li>
                                                <li><a href="@Url.Action("ListaHabitaciones", "Habitaciones")"><span>Administrar habitaciones</span></a></li>
                                                <li><a href="@Url.Action("disponibilidadDiaHoy", "Habitaciones")"><span>Estado del hotel hoy</span></a></li>
                                                <li><a href="@Url.Action("RangoFechas", "Habitaciones")"><span>Estado por fechas</span></a></li>
                                                <li><a href="@Url.Action("Publicidad", "Publicidad")"><span>Publicidad</span></a></li>
                                                <li><a href="@Url.Action("", "")"><span>Disponibilidad de habitaciones</span></a></li>
                                                <li><a href="@Url.Action("Logout", "Administrador")"><span>Cerrar sesi&oacute;n</span></a></li>
                                            }
                                        }
                                    </ul>
                                </nav>
                            </div>
                        </nav>
                    </div>
                    <div class="clearfix"> </div>
                    @{
                        DateTime fechaHoy = DateTime.Now;
                        int mesFh = fechaHoy.Month; 
                        if (mesFh >= 2 && mesFh <= 6) {
                            //promo1
                            <div class="alert alert-success fade in">
                                <a href="@Url.Action("HabitacionDisponible", "Reserva")" class="alert-link">Aproveche, las habitaciones estandar tienen un 10% de descuento y las suite tienen un 20%</a>
                            </div>
                        } else if (mesFh >= 9 && mesFh <= 11) {
                            //promo2
                            <div class="alert alert-success fade in">
                                <a href="@Url.Action("HabitacionDisponible", "Reserva")" class="alert-link">Aproveche, a partir de 3 noches de estadia paga 2 y de 5 paga 3 venga y disfrute</a>
                            </div>
                        } else {
                            //no hay promo
                        }
                    }
                </div>
            </div>
            <div class="w3-banner">
                <div id="typer"></div>
            </div>
        </div>
    </div>

    <!--------------------------------------------- HEADER --------------------------------------------->
    <!------------------------------------------  PUBLICIDAD  ------------------------------------------>

    <div class="col-xs-12 col-sm-12 col-md-12 container" style="background: #FFFFFF;">
        <section class="main row">
            <aside class="col-xs-12 col-sm-4 col-md-3">
                <br>
                <div id="demo" class="carousel slide" data-ride="carousel">
                    <ul class="carousel-indicators">
                        <li data-target="#demo" data-slide-to="0" class="active"></li>
                        <li data-target="#demo" data-slide-to="1"></li>
                        <li data-target="#demo" data-slide-to="2"></li>
                        <li data-target="#demo" data-slide-to="3"></li>
                        <li data-target="#demo" data-slide-to="4"></li>
                        <li data-target="#demo" data-slide-to="5"></li>
                        <li data-target="#demo" data-slide-to="6"></li>
                        <li data-target="#demo" data-slide-to="7"></li>
                        <li data-target="#demo" data-slide-to="8"></li>
                        <li data-target="#demo" data-slide-to="9"></li>
                    </ul>
                    <div class="carousel-inner">
                        <center>
                            <div class="carousel-item active">
                                <img src="../images/anuncio1.png" alt="Coca Cola">
                            </div>
                            <div class="carousel-item">
                                <img src="../images/anuncio2.png" alt="Amazon">
                            </div>
                            <div class="carousel-item">
                                <img src="../images/anuncio4.png" alt="Rusia 2018">
                            </div>
                            <div class="carousel-item">
                                <img src="../images/anuncio5.png" alt="Spotify">
                            </div>
                            <div class="carousel-item">
                                <img src="../images/anuncio7.png" alt="Wallmart">
                            </div>
                            <div class="carousel-item">
                                <img src="../images/anuncio8.png" alt="Dos Pinos">
                            </div>
                            <div class="carousel-item">
                                <img src="../images/anuncio9.png" alt="Esencial CR">
                            </div>
                            <div class="carousel-item">
                                <img src="../images/anuncio10.png" alt="UCR">
                            </div>
                        </center>
                    </div>
                    <a class="carousel-control-prev" href="#demo" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a class="carousel-control-next" href="#demo" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>
                </div>
                <br>
            </aside>

            <!------------------------------------------  PUBLICIDAD  ------------------------------------------>

            @RenderBody()
        </section>
    </div>

    <!--------------------------------------------- FOOTER --------------------------------------------->

    <div class="w3-agile-footer">
        <p>© 2018 Sunset Hotel. All Rights Reserved | Design by <a href="http://w3layouts.com/"> W3layouts</a> </p>
    </div>

    <!--------------------------------------------- FOOTER --------------------------------------------->

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1000);
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('[data-toggle="popover"]').popover({
                html: true,
                placement: 'top',
                trigger: 'hover',
                content: function () {
                    return '<img src="' + $(this).data('image') + '"/>';
                }
            });
        });
    </script>
</body>
</html>
