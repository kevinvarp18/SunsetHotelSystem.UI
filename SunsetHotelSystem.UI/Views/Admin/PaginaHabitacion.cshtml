
@{
    ViewBag.Title = "PaginaHabitacion";
}
<article class="col-xs-12 col-sm-8 col-md-9">
    <div class="news-letter">
        <div class="row">
            <div class="w3ls-heading">
                <h3>Modificar P&aacute;ginas</h3>
            </div>
            <div class="agileinfo-subscribe">
                <h5>Modificar Habitacion</h5>
                <div class="agileinfo-subscribe">
                    <form action="Admin" method="post">
                        <input type="number" name="id" id="id" value="" style="display: none;" />  
                        <center>
                            <input type="text" name="nombreReserva" id="nombreReserva"><br>
                        </center>
                        <textarea id="descripcion" name="descripcion"></textarea>
                        <center>
                            <input type="submit" value="Aceptar">&nbsp;&nbsp;
                            <button type="button" data-toggle="modal" data-target="#myModal">Cancelar</button>
                        </center>
                        <div class="clearfix"> </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</article>
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Advertencia</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">¿Desea salir sin guardar cambios?</div>
            <form action="Home" method="post">
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Sí</button>
                    <button type="submit" class="btn btn-danger" data-dismiss="modal">No</button>
                </div>
            </form>
        </div>
    </div>
</div>